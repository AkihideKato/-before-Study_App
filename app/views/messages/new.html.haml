.contents.row
  .container
    = form_with(model: @message, local: true) do |form|
      %h3
        = "投稿"
        .container-form
          .container-form-title
            = form.text_field :name, placeholder: "題名"
          .container-form-text
            = form.text_area :text, placeholder: "text" , rows: "10",'data-provider': :summernote
          .container-form-submit
            = form.submit "SEND"