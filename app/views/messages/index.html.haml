.message-top
  .message-main
    .message-infomation
      .message-form
        = "Top Page"
        .message-side
          .side-title
            = "今日の天気"
            %div
              %span#weather.bold
            %div
              %span#weatherMark.bold
            %p#icon
              気温
              %span#temp.bold>
              ℃
              %br/
              降水確率
              %span#humidity.bold>
              ％

        - @messages.each do |message|
          .message-header
            .message-created
              = message.created_at.strftime("%m月%d")
            .message-title
              = message.title
          .message-text
            = message.text.html_safe
            .message-name
              - if user_signed_in?
                = current_user.name
                .message-like
                - if message.like_user(current_user.id)
                  = button_to message_like_path(message.likes_count, message_id: message.id), method: :delete, id: "like-button", remote: true do
                    = icon('fas', 'check',)
                    = "復習済"

                    -# = message.likes_count
                - else
                  = button_to message_likes_path(message), id: "like-button", remote: true do
                    = icon('fas', 'exclamation-triangle')
                    = "再復習"
              - else
                = icon('fas', 'hand-peace')
                = message.likes_count

